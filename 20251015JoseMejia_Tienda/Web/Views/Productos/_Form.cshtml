@model Web.Models.ProductoViewModel
<div class="mb-3">
    <label asp-for="Nombre" class="form-label"></label>
    <input asp-for="Nombre" class="form-control" />
    <span asp-validation-for="Nombre" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="Descripcion" class="form-label"></label>
    <textarea asp-for="Descripcion" class="form-control"></textarea>
    <span asp-validation-for="Descripcion" class="text-danger"></span>
</div>
<div class="row">
    <div class="col-md-4 mb-3">
        <label asp-for="PrecioBase" class="form-label"></label>
        <input asp-for="PrecioBase" class="form-control" />
        <span asp-validation-for="PrecioBase" class="text-danger"></span>
    </div>
    <div class="col-md-4 mb-3">
        <label asp-for="PrecioConDescuento" class="form-label"></label>
        <input asp-for="PrecioConDescuento" class="form-control" />
        <span asp-validation-for="PrecioConDescuento" class="text-danger"></span>
    </div>
</div>
<div class="mb-3">
    <label class="form-label">Imagen</label>
    <input type="file" name="imagen" class="form-control" accept="image/*" />
    @if (!string.IsNullOrWhiteSpace(Model.ImagenUrl))
    {
        <div class="mt-2"><img src="@Model.ImagenUrl" style="height:80px" /></div>
    }
</div>